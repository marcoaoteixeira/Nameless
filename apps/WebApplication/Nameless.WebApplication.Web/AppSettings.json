{
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "ApplicationDbContext": "Data Source=.\\SQLExpress;Initial Catalog=WebApplicationDb;Integrated Security=True;MultipleActiveResultSets=True;TrustServerCertificate=True;",
    "ApplicationDbContext_Docker": "Data Source=host.docker.internal,2866;Initial Catalog=WebApplicationDb;User Id=sa;Password=sa;Integrated Security=False;MultipleActiveResultSets=True;TrustServerCertificate=True;"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Log4net": {
    "ConfigurationFileName": "log4net.config",
    "RepositoryName": null,
    "ReloadOnChange": false,
    "OverrideCriticalLevel": false
  },

  "JsonWebToken": {
    "Issuer": "WebApplication",
    "ValidateIssuer": false,
    "Audience": "WebApplication",
    "ValidateAudience": false,
    "AccessTokenTtl": 60,
    "ValidateLifetime": true,
    "RefreshTokenTtl": 15
  },

  "Localization": {
    "ResourceFolderPath": "Localization",
    "DefaultCultureName": "pt-BR",
    "ReloadOnChange": false
  },

  "Lucene": {
    "IndexesDirectoryName": "Lucene\\Indexes"
  },

  "PasswordGenerator": {
    "MinLength": 6,
    "MaxLength": 12,
    "SpecialChars": "*$-+?_&=!%{}/",
    "NumericChars": "0123456789",
    "LowerCasesChars": "abcdefgijkmnopqrstwxyz",
    "UpperCasesChars": "ABCDEFGIJKMNOPQRSTWXYZ"
  },

  "SwaggerPage": {
    "Description": "Web Application",
    "Contact": {
      "Name": "Administrator",
      "Email": "administrator@webapplication.com",
      "Url": "https://www.webapplication.com/"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    }
  }
}
